{
  "id": "procura",
  "name": "Procura Healthcare Platform",
  "version": "1.0.0",
  "description": "Medical supply chain platform with inventory, orders, and healthcare provider management",
  "schemas": {
    "provider": {
      "type": "object",
      "description": "Healthcare provider (hospital, clinic, pharmacy)",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string",
          "faker": "company.name"
        },
        "type": {
          "type": "string",
          "enum": ["hospital", "clinic", "pharmacy", "nursing_home", "urgent_care"],
          "faker": "helpers.arrayElement"
        },
        "licenseNumber": {
          "type": "string",
          "faker": "string.alphanumeric",
          "length": 12
        },
        "address": {
          "type": "object",
          "properties": {
            "street": { "type": "string", "faker": "location.streetAddress" },
            "city": { "type": "string", "faker": "location.city" },
            "state": { "type": "string", "faker": "location.state" },
            "zipCode": { "type": "string", "faker": "location.zipCode" },
            "country": { "type": "string", "faker": "location.country" }
          }
        },
        "contactInfo": {
          "type": "object",
          "properties": {
            "email": { "type": "string", "faker": "internet.email" },
            "phone": { "type": "string", "faker": "phone.number" },
            "emergencyPhone": { "type": "string", "faker": "phone.number" }
          }
        },
        "bedCount": {
          "type": "integer",
          "minimum": 0,
          "faker": "number.int",
          "max": 1000
        },
        "specialties": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["cardiology", "oncology", "pediatrics", "surgery", "emergency", "radiology", "pharmacy", "general"]
          }
        },
        "monthlySpend": {
          "type": "number",
          "minimum": 0,
          "faker": "commerce.price"
        },
        "totalSpend": {
          "type": "number",
          "minimum": 0,
          "faker": "commerce.price"
        },
        "creditLimit": {
          "type": "number",
          "minimum": 0,
          "faker": "commerce.price"
        },
        "paymentTerms": {
          "type": "string",
          "enum": ["net_15", "net_30", "net_45", "net_60", "prepaid"],
          "default": "net_30"
        },
        "isActive": {
          "type": "boolean",
          "default": true
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "faker": "date.past"
        }
      },
      "required": ["id", "name", "type", "licenseNumber", "address", "contactInfo", "createdAt"]
    },
    "product": {
      "type": "object",
      "description": "Medical supply product with regulatory information",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "sku": {
          "type": "string",
          "faker": "string.alphanumeric",
          "length": 10
        },
        "name": {
          "type": "string",
          "faker": "commerce.productName"
        },
        "description": {
          "type": "string",
          "faker": "lorem.paragraph"
        },
        "category": {
          "type": "string",
          "enum": ["pharmaceuticals", "medical_devices", "surgical_supplies", "ppe", "diagnostics", "consumables"],
          "faker": "helpers.arrayElement"
        },
        "manufacturer": {
          "type": "string",
          "faker": "company.name"
        },
        "fdaApproved": {
          "type": "boolean",
          "default": true
        },
        "regulatoryInfo": {
          "type": "object",
          "properties": {
            "ndcNumber": { "type": "string", "faker": "string.numeric", "length": 11 },
            "lotNumber": { "type": "string", "faker": "string.alphanumeric", "length": 8 },
            "expirationDate": { "type": "string", "format": "date", "faker": "date.future" },
            "storageRequirements": { "type": "string", "enum": ["room_temperature", "refrigerated", "frozen", "controlled_substance"] }
          }
        },
        "pricing": {
          "type": "object",
          "properties": {
            "unitCost": { "type": "number", "minimum": 0, "faker": "commerce.price" },
            "wholesalePrice": { "type": "number", "minimum": 0, "faker": "commerce.price" },
            "retailPrice": { "type": "number", "minimum": 0, "faker": "commerce.price" },
            "contractPrice": { "type": "number", "minimum": 0, "faker": "commerce.price" }
          }
        },
        "inventory": {
          "type": "object",
          "properties": {
            "onHand": { "type": "integer", "minimum": 0, "faker": "number.int", "max": 10000 },
            "allocated": { "type": "integer", "minimum": 0, "default": 0 },
            "available": { "type": "integer", "minimum": 0 },
            "reorderPoint": { "type": "integer", "minimum": 0, "faker": "number.int", "max": 1000 },
            "maxStock": { "type": "integer", "minimum": 0, "faker": "number.int", "max": 50000 }
          }
        },
        "isControlledSubstance": {
          "type": "boolean",
          "default": false
        },
        "requiresPrescription": {
          "type": "boolean",
          "default": false
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "faker": "date.past"
        }
      },
      "required": ["id", "sku", "name", "category", "manufacturer", "pricing", "inventory", "createdAt"]
    },
    "order": {
      "type": "object",
      "description": "Medical supply order with compliance tracking",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "orderNumber": {
          "type": "string",
          "faker": "string.alphanumeric",
          "length": 12
        },
        "providerId": {
          "type": "string",
          "format": "uuid"
        },
        "status": {
          "type": "string",
          "enum": ["pending", "approved", "processing", "shipped", "delivered", "cancelled", "returned"],
          "default": "pending"
        },
        "priority": {
          "type": "string",
          "enum": ["routine", "urgent", "emergency", "stat"],
          "default": "routine"
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "productId": { "type": "string" },
              "sku": { "type": "string" },
              "name": { "type": "string" },
              "quantity": { "type": "integer", "minimum": 1 },
              "unitPrice": { "type": "number", "minimum": 0 },
              "totalPrice": { "type": "number", "minimum": 0 },
              "lotNumber": { "type": "string" },
              "expirationDate": { "type": "string", "format": "date" }
            }
          }
        },
        "totals": {
          "type": "object",
          "properties": {
            "subtotal": { "type": "number", "minimum": 0, "faker": "commerce.price" },
            "tax": { "type": "number", "minimum": 0 },
            "shipping": { "type": "number", "minimum": 0 },
            "discount": { "type": "number", "minimum": 0, "default": 0 },
            "total": { "type": "number", "minimum": 0 }
          }
        },
        "shipping": {
          "type": "object",
          "properties": {
            "method": { "type": "string", "enum": ["standard", "expedited", "overnight", "cold_chain", "hazmat"] },
            "carrier": { "type": "string", "enum": ["ups", "fedex", "dhl", "specialized_medical"] },
            "trackingNumber": { "type": "string", "faker": "string.alphanumeric", "length": 15 },
            "estimatedDelivery": { "type": "string", "format": "date-time", "faker": "date.future" },
            "actualDelivery": { "type": "string", "format": "date-time" },
            "temperatureControlled": { "type": "boolean", "default": false }
          }
        },
        "compliance": {
          "type": "object",
          "properties": {
            "requiresSignature": { "type": "boolean", "default": true },
            "controlledSubstances": { "type": "boolean", "default": false },
            "prescriptionRequired": { "type": "boolean", "default": false },
            "auditTrail": { "type": "array", "items": { "type": "string" } }
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "faker": "date.past"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "faker": "date.recent"
        }
      },
      "required": ["id", "orderNumber", "providerId", "status", "items", "totals", "createdAt"]
    },
    "invoice": {
      "type": "object",
      "description": "Medical supply invoice with payment tracking",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "invoiceNumber": {
          "type": "string",
          "faker": "string.alphanumeric",
          "length": 10
        },
        "orderId": {
          "type": "string",
          "format": "uuid"
        },
        "providerId": {
          "type": "string",
          "format": "uuid"
        },
        "amount": {
          "type": "number",
          "minimum": 0,
          "faker": "commerce.price"
        },
        "tax": {
          "type": "number",
          "minimum": 0
        },
        "total": {
          "type": "number",
          "minimum": 0
        },
        "currency": {
          "type": "string",
          "enum": ["USD", "EUR", "GBP"],
          "default": "USD"
        },
        "status": {
          "type": "string",
          "enum": ["draft", "sent", "paid", "overdue", "disputed", "cancelled"],
          "default": "sent"
        },
        "paymentTerms": {
          "type": "string",
          "enum": ["net_15", "net_30", "net_45", "net_60", "prepaid"],
          "default": "net_30"
        },
        "dueDate": {
          "type": "string",
          "format": "date-time",
          "faker": "date.future"
        },
        "paidDate": {
          "type": "string",
          "format": "date-time"
        },
        "paymentMethod": {
          "type": "string",
          "enum": ["ach", "wire_transfer", "check", "credit_card"],
          "faker": "helpers.arrayElement"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "faker": "date.past"
        }
      },
      "required": ["id", "invoiceNumber", "orderId", "providerId", "amount", "total", "status", "createdAt"]
    }
  },
  "categories": {
    "early": {
      "id": "early",
      "name": "Regional Medical Distributor",
      "description": "Small medical supply distributor serving local healthcare providers",
      "businessType": "healthcare",
      "config": {
        "id": 10004,
        "dateRange": {
          "start": "2024-02-01",
          "end": "2024-12-31"
        },
        "volume": {
          "providers": 150,
          "products": 2500,
          "orders": 3000,
          "invoices": 3200
        },
        "relationships": {
          "averageOrderValue": 2500,
          "paymentTerms": "net_30",
          "fulfillmentTime": 2,
          "complianceRate": 0.98
        },
        "complexity": "early"
      }
    },
    "growth": {
      "id": "growth",
      "name": "Multi-State Medical Supply Chain",
      "description": "Growing medical distributor with expanded geographic reach",
      "businessType": "healthcare",
      "config": {
        "id": 20004,
        "dateRange": {
          "start": "2023-01-01",
          "end": "2024-12-31"
        },
        "volume": {
          "providers": 2500,
          "products": 15000,
          "orders": 50000,
          "invoices": 52000
        },
        "relationships": {
          "averageOrderValue": 4200,
          "paymentTerms": "net_30",
          "fulfillmentTime": 1.5,
          "complianceRate": 0.995
        },
        "complexity": "growth"
      }
    },
    "enterprise": {
      "id": "enterprise",
      "name": "National Healthcare Supply Network",
      "description": "Large-scale medical supply chain serving major health systems",
      "businessType": "healthcare",
      "config": {
        "id": 30004,
        "dateRange": {
          "start": "2022-01-01",
          "end": "2024-12-31"
        },
        "volume": {
          "providers": 15000,
          "products": 100000,
          "orders": 500000,
          "invoices": 520000
        },
        "relationships": {
          "averageOrderValue": 8500,
          "paymentTerms": "net_45",
          "fulfillmentTime": 1,
          "complianceRate": 0.999
        },
        "complexity": "enterprise"
      }
    }
  },
  "roles": {
    "admin": {
      "id": "admin",
      "name": "Administrator",
      "description": "Full access to all medical supply and financial data",
      "accessLevel": "admin",
      "dataVisibility": {
        "fullAccess": true
      },
      "overrides": {
        "provider": {
          "isActive": true,
          "paymentTerms": "net_30"
        }
      }
    },
    "support": {
      "id": "support",
      "name": "Support Agent",
      "description": "Customer support with financial data masked",
      "accessLevel": "support",
      "dataVisibility": {
        "fullAccess": false,
        "maskedFields": ["monthlySpend", "totalSpend", "creditLimit", "unitCost", "wholesalePrice", "retailPrice", "contractPrice", "amount", "tax", "total"],
        "hiddenFields": []
      },
      "overrides": {}
    }
  },
  "routes": {
    "/api/providers": {
      "schema": "provider",
      "rest": true,
      "methods": ["GET", "POST", "PUT", "DELETE"]
    },
    "/api/products": {
      "schema": "product",
      "rest": true,
      "methods": ["GET", "POST", "PUT", "DELETE"]
    },
    "/api/orders": {
      "schema": "order",
      "rest": true,
      "methods": ["GET", "POST", "PUT", "DELETE"]
    },
    "/api/invoices": {
      "schema": "invoice",
      "rest": true,
      "methods": ["GET", "POST", "PUT"]
    }
  }
}
