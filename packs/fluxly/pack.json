{
  "id": "fluxly",
  "name": "Fluxly Platform",
  "version": "1.0.0",
  "description": "Creator economy platform with content monetization, subscriptions, and fan engagement",
  "schemas": {
    "creator": {
      "type": "object",
      "description": "Content creator with monetization metrics",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "username": {
          "type": "string",
          "faker": "internet.userName"
        },
        "displayName": {
          "type": "string",
          "faker": "person.fullName"
        },
        "email": {
          "type": "string",
          "format": "email",
          "faker": "internet.email"
        },
        "category": {
          "type": "string",
          "enum": ["gaming", "lifestyle", "education", "music", "art", "comedy", "fitness", "cooking"],
          "faker": "helpers.arrayElement"
        },
        "followers": {
          "type": "integer",
          "minimum": 0,
          "faker": "number.int",
          "max": 10000000
        },
        "monthlyRevenue": {
          "type": "number",
          "minimum": 0,
          "faker": "commerce.price"
        },
        "subscriptionPrice": {
          "type": "number",
          "minimum": 0,
          "faker": "commerce.price"
        },
        "totalEarnings": {
          "type": "number",
          "minimum": 0
        },
        "contentCount": {
          "type": "integer",
          "minimum": 0,
          "faker": "number.int",
          "max": 5000
        },
        "averageViews": {
          "type": "integer",
          "minimum": 0,
          "faker": "number.int",
          "max": 1000000
        },
        "engagementRate": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "faker": "number.float",
          "precision": 0.001
        },
        "isVerified": {
          "type": "boolean",
          "default": false
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "faker": "date.past"
        }
      },
      "required": ["id", "username", "displayName", "email", "category", "createdAt"]
    },
    "subscription": {
      "type": "object",
      "description": "Fan subscription to creator content",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "creatorId": {
          "type": "string",
          "format": "uuid"
        },
        "fanId": {
          "type": "string",
          "format": "uuid"
        },
        "tier": {
          "type": "string",
          "enum": ["basic", "premium", "vip"],
          "default": "basic"
        },
        "monthlyAmount": {
          "type": "number",
          "minimum": 0,
          "faker": "commerce.price"
        },
        "status": {
          "type": "string",
          "enum": ["active", "paused", "cancelled", "expired"],
          "default": "active"
        },
        "autoRenew": {
          "type": "boolean",
          "default": true
        },
        "startDate": {
          "type": "string",
          "format": "date-time",
          "faker": "date.past"
        },
        "nextBillingDate": {
          "type": "string",
          "format": "date-time",
          "faker": "date.future"
        },
        "totalPaid": {
          "type": "number",
          "minimum": 0
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "faker": "date.past"
        }
      },
      "required": ["id", "creatorId", "fanId", "tier", "monthlyAmount", "status", "createdAt"]
    },
    "content": {
      "type": "object",
      "description": "Creator content with engagement metrics",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "creatorId": {
          "type": "string",
          "format": "uuid"
        },
        "title": {
          "type": "string",
          "faker": "lorem.sentence"
        },
        "type": {
          "type": "string",
          "enum": ["video", "image", "audio", "text", "live_stream"],
          "faker": "helpers.arrayElement"
        },
        "tier": {
          "type": "string",
          "enum": ["free", "basic", "premium", "vip"],
          "default": "free"
        },
        "views": {
          "type": "integer",
          "minimum": 0,
          "faker": "number.int",
          "max": 10000000
        },
        "likes": {
          "type": "integer",
          "minimum": 0,
          "faker": "number.int",
          "max": 500000
        },
        "comments": {
          "type": "integer",
          "minimum": 0,
          "faker": "number.int",
          "max": 50000
        },
        "shares": {
          "type": "integer",
          "minimum": 0,
          "faker": "number.int",
          "max": 10000
        },
        "revenue": {
          "type": "number",
          "minimum": 0,
          "faker": "commerce.price"
        },
        "duration": {
          "type": "integer",
          "minimum": 0,
          "description": "Duration in seconds for video/audio content"
        },
        "publishedAt": {
          "type": "string",
          "format": "date-time",
          "faker": "date.past"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "faker": "date.past"
        }
      },
      "required": ["id", "creatorId", "title", "type", "tier", "publishedAt", "createdAt"]
    },
    "payout": {
      "type": "object",
      "description": "Creator earnings payout",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "creatorId": {
          "type": "string",
          "format": "uuid"
        },
        "amount": {
          "type": "number",
          "minimum": 0,
          "faker": "commerce.price"
        },
        "currency": {
          "type": "string",
          "enum": ["USD", "EUR", "GBP", "CAD"],
          "default": "USD"
        },
        "period": {
          "type": "object",
          "properties": {
            "start": { "type": "string", "format": "date-time" },
            "end": { "type": "string", "format": "date-time" }
          }
        },
        "breakdown": {
          "type": "object",
          "properties": {
            "subscriptions": { "type": "number", "minimum": 0 },
            "tips": { "type": "number", "minimum": 0 },
            "merchandise": { "type": "number", "minimum": 0 },
            "sponsorships": { "type": "number", "minimum": 0 }
          }
        },
        "platformFee": {
          "type": "number",
          "minimum": 0
        },
        "netAmount": {
          "type": "number",
          "minimum": 0
        },
        "status": {
          "type": "string",
          "enum": ["pending", "processing", "completed", "failed"],
          "default": "completed"
        },
        "paidAt": {
          "type": "string",
          "format": "date-time",
          "faker": "date.recent"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "faker": "date.past"
        }
      },
      "required": ["id", "creatorId", "amount", "currency", "status", "createdAt"]
    }
  },
  "categories": {
    "early": {
      "id": "early",
      "name": "Emerging Creator Platform",
      "description": "New creator platform building initial community",
      "businessType": "marketplace",
      "config": {
        "id": 10001,
        "dateRange": {
          "start": "2024-06-01",
          "end": "2024-12-31"
        },
        "volume": {
          "creators": 200,
          "subscriptions": 800,
          "content": 5000,
          "payouts": 150
        },
        "relationships": {
          "averageFollowers": 2500,
          "subscriptionRate": 0.08,
          "averageRevenue": 150,
          "platformFeeRate": 0.15
        },
        "complexity": "early"
      }
    },
    "growth": {
      "id": "growth",
      "name": "Scaling Creator Economy",
      "description": "Growing platform with established creator base",
      "businessType": "marketplace",
      "config": {
        "id": 20001,
        "dateRange": {
          "start": "2023-01-01",
          "end": "2024-12-31"
        },
        "volume": {
          "creators": 5000,
          "subscriptions": 25000,
          "content": 150000,
          "payouts": 4000
        },
        "relationships": {
          "averageFollowers": 15000,
          "subscriptionRate": 0.12,
          "averageRevenue": 850,
          "platformFeeRate": 0.12
        },
        "complexity": "growth"
      }
    },
    "enterprise": {
      "id": "enterprise",
      "name": "Global Creator Platform",
      "description": "Large-scale creator economy with millions of users",
      "businessType": "marketplace",
      "config": {
        "id": 30001,
        "dateRange": {
          "start": "2022-01-01",
          "end": "2024-12-31"
        },
        "volume": {
          "creators": 100000,
          "subscriptions": 2000000,
          "content": 10000000,
          "payouts": 80000
        },
        "relationships": {
          "averageFollowers": 50000,
          "subscriptionRate": 0.18,
          "averageRevenue": 2500,
          "platformFeeRate": 0.10
        },
        "complexity": "enterprise"
      }
    }
  },
  "roles": {
    "admin": {
      "id": "admin",
      "name": "Administrator",
      "description": "Full access to all creator and financial data",
      "accessLevel": "admin",
      "dataVisibility": {
        "fullAccess": true
      },
      "overrides": {
        "creator": {
          "isVerified": true,
          "category": "gaming"
        }
      }
    },
    "support": {
      "id": "support",
      "name": "Support Agent",
      "description": "Creator support with financial data masked",
      "accessLevel": "support",
      "dataVisibility": {
        "fullAccess": false,
        "maskedFields": ["monthlyRevenue", "totalEarnings", "monthlyAmount", "totalPaid", "revenue", "amount", "platformFee", "netAmount"],
        "hiddenFields": []
      },
      "overrides": {}
    }
  },
  "routes": {
    "/api/creators": {
      "schema": "creator",
      "rest": true,
      "methods": ["GET", "POST", "PUT", "DELETE"]
    },
    "/api/subscriptions": {
      "schema": "subscription",
      "rest": true,
      "methods": ["GET", "POST", "PUT", "DELETE"]
    },
    "/api/content": {
      "schema": "content",
      "rest": true,
      "methods": ["GET", "POST", "PUT", "DELETE"]
    },
    "/api/payouts": {
      "schema": "payout",
      "rest": true,
      "methods": ["GET", "POST"]
    }
  }
}
