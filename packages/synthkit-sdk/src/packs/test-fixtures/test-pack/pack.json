{
  "id": "test-pack",
  "name": "Test Pack",
  "description": "A test pack for unit tests",
  "version": "1.0.0",
  "schemas": {
    "user": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "format": "uuid" },
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" }
      },
      "required": ["id", "name", "email"]
    },
    "product": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "format": "uuid" },
        "name": { "type": "string" },
        "price": { "type": "number", "minimum": 0 }
      },
      "required": ["id", "name", "price"]
    }
  },
  "scenarios": {
    "default": {
      "id": "default",
      "name": "Default Scenario",
      "config": {
        "seed": 12345,
        "volume": {
          "users": 10,
          "products": 20
        }
      }
    }
  },
  "personas": {
    "developer": {
      "id": "developer",
      "name": "Developer",
      "preferences": {
        "locale": "en-US",
        "timezone": "UTC"
      }
    }
  },
  "routes": {
    "/api/users": {
      "schema": "user",
      "rest": true
    },
    "/api/products": {
      "schema": "product",
      "rest": true
    }
  }
}
