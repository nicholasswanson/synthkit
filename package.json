{
  "name": "synthkit",
  "version": "1.0.0",
  "description": "A comprehensive mocking and scenario generation toolkit",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "examples/*",
    "packs/*",
    "tools/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "test": "vitest",
    "test:ci": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "validate": "node tools/validate-project.js",
    "validate:pack": "node tools/governance/validate-pack.js --all",
    "validate:single": "node tools/governance/validate-pack.js",
    "pre-commit": "pnpm validate && pnpm build && pnpm typecheck",
    "dev": "pnpm --filter @synthkit/example-next dev",
    "cli": "node tools/cli/dist/cli.mjs",
    "setup": "./scripts/setup-dev-auto.sh",
    "setup:basic": "./scripts/setup-dev.sh",
    "update-deps": "node tools/update-deps.js"
  },
  "dependencies": {
    "@faker-js/faker": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "prettier": "^3.3.3",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  },
  "engines": {
    "node": ">=20.11.0 <21.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.12.3",
  "keywords": [
    "mock",
    "data",
    "generation",
    "testing",
    "scenarios",
    "personas",
    "msw",
    "json-schema",
    "faker",
    "ai",
    "claude"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nicholasswanson/synthkit"
  },
  "license": "MIT",
  "author": {
    "name": "Synthkit Team",
    "email": "team@synthkit.dev"
  },
  "bugs": {
    "url": "https://github.com/synthkit/synthkit/issues"
  },
  "homepage": "https://synthkit.dev"
}
